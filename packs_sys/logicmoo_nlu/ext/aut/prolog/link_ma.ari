believe(c2, want(c3, link(c3, c1))).
believe(c2, not want(c3, link(c3, c2))).
believe(c2, want(c1, link(c2, c1))):- believe(c1, want(c3, link(c2, c1))).
want(c2, (link(c1, c3):-believe(c1, want(c3, link(c1,c3))) )). 
