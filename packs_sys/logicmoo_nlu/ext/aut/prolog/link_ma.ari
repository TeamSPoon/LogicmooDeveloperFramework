want(c2, not  believe(c1, want(c2, link(c3, c2)))).
believe(c2, ( link(c3, c2):-believe(c3, want(c1, link(c3, c2))) ) ).
link(c3, c2):-believe(c3, want(c1, link(c3, c2))).

want(c3, link(c1, c3)).
believe(c3, want(c1, link(c1, c2))).
believe(c3, not want(c1, link(c1, c3))).
believe(c3, want(c2, link(c3, c2))):- believe(c2, want(c1, link(c3, c2))).
want(c3, (link(c2, c1):-believe(c2, want(c1, link(c2,c1))) )). 
want(c3, believe(c2, want(c3, link(c3, c2)))). %!
want(c3, not  believe(c2, want(c3, link(c1, c3)))).
believe(c3, ( link(c1, c3):-believe(c1, want(c2, link(c1, c3))) ) ).

unable( link(Ag, Ag) ) :- member(Agent, [s,m]).

allActions([ inform, ask, link]). %, forgive, conceal,pretend,]).
