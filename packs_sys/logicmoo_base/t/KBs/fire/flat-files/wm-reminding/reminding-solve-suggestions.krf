(in-microtheory RemindingSuggestionsMt)

(defSuggestion FoundReminding
    (remindedOf ?probe ?context ?reminding ?mapping ?sub-episode-id)
  :test (outsourcedOnly (sageWMSelect  ?probe ?context ?cand-reminding ?cand-mapping))
  :subgoals ((wmOnly (sageWMSelect  ?probe ?context ?cand-reminding ?cand-mapping))
             (unifies ?reminding ?cand-reminding)
             (unifies ?mapping ?cand-mapping))
  :documentation "if a reminding exist for the given probe, it returns it")

(defSuggestion NoRemindingFound
    (remindedOf ?probe ?context ?reminding ?mapping ?sub-episode-id)
  :cost-function 2
  :subgoals ((unifies ?probe ?reminding)
             (unifies ?probe ?mapping))
  :documentation "if a reminding can't be found return the probe itself as its reminding")

