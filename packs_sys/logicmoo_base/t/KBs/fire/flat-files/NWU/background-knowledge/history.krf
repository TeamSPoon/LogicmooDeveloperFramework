(opponentsInConflict UnitedStatesOfAmerica NorthKorea KoreanWar)
(opponentsInConflict SouthKorea NorthKorea KoreanWar)

(isa VietnamWar CivilWar)
(isa VietnamWar Individual)
(eventOccursAt VietnamWar SoutheastAsia)
(startingDate VietnamWar (DayFn 1 (MonthFn November (YearFn 1955))))
(endingDate VietnamWar (DayFn 30 (MonthFn April (YearFn 1975))))
