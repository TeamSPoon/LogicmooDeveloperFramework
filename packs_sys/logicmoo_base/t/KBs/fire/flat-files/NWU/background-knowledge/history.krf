(endingDate GulfWar (DayFn 28 (MonthFn February (YearFn 1991))))
(dateOfEvent GulfWar (TimeIntervalInclusiveFn (DayFn 17 (MonthFn January (YearFn 1991))) (DayFn 28 (MonthFn February (YearFn 1991)))))

