(genls Saliva ColorlessThing)
(genls Saliva Transparent)
(genls Teardrop Transparent)


;;; except at night, or at sunset:
(relationMostInstance color (SubcollectionOfWithRelationFromTypeFn PieceOfSky temporallySubsumes DaytimeHours) BlueColor)
(relationMostInstance mainColorOfObject (SubcollectionOfWithRelationFromTypeFn PieceOfSky temporallySubsumes Sunset) OrangeColor)
(colorOfType (SubcollectionOfWithRelationFromTypeFn PieceOfSky temporallySubsumes Night) BlackColor)

(relationMostInstance color Sea VeryLightGreenishBlue-Color)

