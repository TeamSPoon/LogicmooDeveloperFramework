(in-microtheory UniversalVocabularyMt)

;;; typicalColorOfType

(relationMostInstance mainColorOfObject Grass-Plant GreenColor)
(colorOfType Grass-Plant GreenColor)

(relationAllInstance mainColorOfObject Blood RedColor)
(colorOfType Blood RedColor)
(colorOfType Mud BrownColor)
(colorOfType Leaf GreenColor)  ; assuming not deceased
(colorOfType Grass-Plant GreenColor)
(colorOfType Urine YellowColor)
(colorOfType Feces BrownColor)
(colorOfType Ash GrayColor)
(colorOfType Coal BlackColor)
(colorOfType Iron GrayColor)
(colorOfType Rust OrangeColor) ; actually genls from that
(colorOfType SnowMob WhiteColor)
(colorOfType Snowflake WhiteColor)
(colorOfType Lava OrangeColor) ; Reddish?
