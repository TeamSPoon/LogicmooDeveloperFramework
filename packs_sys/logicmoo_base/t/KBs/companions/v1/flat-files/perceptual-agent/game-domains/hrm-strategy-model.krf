(in-microtheory (StrategyModelMtFn HRM) :exclude-globals t)

;;; Quantities to reify:
;;; Don't do this as a big set. 

(defaultMeasureQuantity HRM
    ((MeasurableQuantityFn performance)
     (GenericInstanceFn
      (CollectionSubsetFn HRMCharacter
       (TheSetOf ?emp
        (currentlyTrue (status ?emp Employee)))))))
        
