(in-microtheory Interaction-ManagerMt)


(isa ReadAndStoreSUSD ComplexActionPredicate)
(arity ReadAndStoreSUSD 1)
(arg1Isa ReadAndStoreSUSD Thing)
(comment ReadAndStoreSUSD "(ReadAndStoreSUSD ?experimental-trial-name)
 reads SUSD and stores it in the KB.")

(isa ReadAndStoreSUSDChapter ComplexActionPredicate)
(arity ReadAndStoreSUSDChapter 2)
(arg1Isa ReadAndStoreSUSDChapter Number)
(arg2Isa ReadAndStoreSUSDChapter Thing)
(comment ReadAndStoreSUSDChapter "(ReadAndStoreSUSDChapter ?chapter-number
?experimental-trial-name) reads the specified chapter of SUSD and stores it
 in the KB.")

(isa ReadAndStoreFullSUSDChapter ComplexActionPredicate)
(arity ReadAndStoreFullSUSDChapter 2)
(arg1Isa ReadAndStoreFullSUSDChapter Number)
(arg2Isa ReadAndStoreFullSUSDChapter Thing)
(comment ReadAndStoreFullSUSDChapter "(ReadAndStoreFullSUSDChapter ?chapter-number 
?experimental-trial-name)
reads the specified chapter of SUSD as one big unit and stores it in the KB.")

(isa ReadAndStoreParagraph-SUSD ComplexActionPredicate)
(arity ReadAndStoreParagraph-SUSD 3)
(arg1Isa ReadAndStoreParagraph-SUSD Number)
(arg2Isa ReadAndStoreParagraph-SUSD Number)
(arg3Isa ReadAndStoreParagraph-SUSD Thing)
(comment ReadAndStoreParagraph-SUSD "(ReadAndStoreParagraph-SUSD ?chapter-number 
?paragraph-number ?experimental-trial-name)
reads the specified paragraph of SUSD and stores it in the KB.")



(preconditionForMethod
 (and
      (evaluate ?chaps
        (TheClosedRetrievalSetOf ?chapter-number
          (ist-Information TextContentsOfSourceTextsCanonicalMt
            (textContentsOfSourceText-Canonical 
             (SourceTextChapterParagraphFn SUSD-Unsimplified ?chapter-number ?paragraph-number)
             ?text))))        
      )
 (methodForAction
    (ReadAndStoreSUSD ?experimental-trial-name)
    (actionSequence
     (TheList
      (doForEach ?next-chap ?chaps
           (ReadAndStoreSUSDChapter ?next-chap ?experimental-trial-name))))))

(preconditionForMethod
 (and
      (evaluate ?paras
        (TheClosedRetrievalSetOf ?paragraph-number
          (ist-Information TextContentsOfSourceTextsCanonicalMt
            (textContentsOfSourceText-Canonical 
             (SourceTextChapterParagraphFn SUSD-Unsimplified ?chapter-number ?paragraph-number)
             ?text))))        
      )
 (methodForAction
    (ReadAndStoreSUSDChapter ?chapter-number ?experimental-trial-name)
    (actionSequence
     (TheList
      (doClearWorkingMemory)
      (doGarbageCollect)
      (doForEach ?next-para ?paras
                 (ReadAndStoreParagraph-SUSD ?chapter-number ?next-para ?experimental-trial-name))))))  

(preconditionForMethod
 (and
      (outsourcedOnly 
       (generatedReadingName (SourceTextChapterFn SUSD-Unsimplified ?chapter-number) ?generated-reading-name))
      (kbOnly 
       (ist-Information TextContentsOfSourceTextsCanonicalMt
         (textContentsOfSourceText-Canonical (SourceTextChapterFn SUSD-Unsimplified ?chapter-number) ?text))))
 (methodForAction
    (ReadAndStoreFullSUSDChapter ?chapter-number ?experimental-trial-name)
    (actionSequence
     (TheList
      (doClearWorkingMemory)
      (doGarbageCollect)
      (doRecord 
       (ist-Information (MtForSourceTextFn (SourceTextChapterFn SUSD-Unsimplified ?chapter-number))
         (readingOfSourceText ?generated-reading-name 
                              (SourceTextChapterFn SUSD-Unsimplified ?chapter-number))))
      (learnByReadingStoredSourceText (SourceTextChapterFn SUSD-Unsimplified ?chapter-number)
                                      ?generated-reading-name ?experimental-trial-name)))))

;;;  (textContentsOfSourceText-Canonical (SourceTextChapterParagraphFn SUSD-Unsimplified 1 2) "text")
(preconditionForMethod
 (and
      (outsourcedOnly (generatedReadingName (SourceTextChapterParagraphFn SUSD-Unsimplified ?chapter-number ?paragraph-number) ?generated-reading-name))
      (kbOnly 
       (ist-Information TextContentsOfSourceTextsCanonicalMt
         (textContentsOfSourceText-Canonical (SourceTextChapterParagraphFn SUSD-Unsimplified ?chapter-number ?paragraph-number) ?text))))
 (methodForAction
    (ReadAndStoreParagraph-SUSD ?chapter-number ?paragraph-number ?experimental-trial-name)
    (actionSequence
     (TheList
      (doRecord (ist-Information (MtForSourceTextFn (SourceTextChapterParagraphFn SUSD-Unsimplified ?chapter-number ?paragraph-number))
                                                    (readingOfSourceText ?generated-reading-name (SourceTextChapterParagraphFn SUSD-Unsimplified ?chapter-number ?paragraph-number))))
      (learnByReadingStoredSourceText (SourceTextChapterParagraphFn SUSD-Unsimplified ?chapter-number ?paragraph-number) ?generated-reading-name ?experimental-trial-name)))))


(isa makeCaseFromStoredInterpretation ComplexActionPredicate)
(arity makeCaseFromStoredInterpretation 2)
(arg1Isa makeCaseFromStoredInterpretation Microtheory)
(arg2Isa makeCaseFromStoredInterpretation Microtheory)
(comment makeCaseFromStoredInterpretation "(makeCaseFromStoredInterpretation ?inter-mt ?storage-mt) takes the interpretation based in ?inter-mt
and makes a case for doing analogy with, all in ?storage-mt.")

(isa caseFromStoredInterpretation predicate)
(arity caseFromStoredInterpretation 2)
(arg1Isa caseFromStoredInterpretation Microtheory)
(arg2Isa caseFromStoredInterpretation Microtheory)
(comment caseFromStoredInterpretation "(caseFromStoredInterpretation ?inter-mt ?storage-mt) takes the interpretation based in ?inter-mt
and makes a case for doing analogy with, all in ?storage-mt, when used as an outsourced predicate.")

(preconditionForMethod
 (and
      (outsourcedOnly (caseFromStoredInterpretation ?inter-mt ?storage-mt)))
 (methodForAction
  (makeCaseFromStoredInterpretation ?inter-mt ?storage-mt)
  (actionSequence
   (TheList
    (doForEach ?next-chap ?chaps
               (ReadAndStoreSUSDChapter ?next-chap ?experimental-trial-name))))))
;;;;;;;;;

(isa lengthOfSource Predicate)
(arity lengthOfSource 2)
(arg1Isa lengthOfSource InformationBearingThing)
(arg2Isa lengthOfSource Integer)
(comment lengthOfSource "(lengthOfSource ?source ?length) indicates the ?length
of the source text ?source in sentences. It can be used as an outsourced
predicate.")


