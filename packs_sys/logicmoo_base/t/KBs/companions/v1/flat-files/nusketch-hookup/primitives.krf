(in-microtheory Cogsketch-AgentMt)

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

;;;define doOpenSketchFile primitive
(isa doOpenSketchFile SimpleActionPredicate)
(arity doOpenSketchFile 1)
(arg1Isa doOpenSketchFile CharacterString)
(comment doOpenSketchFile "(doOpenSketchFile ?file-URL) opens the sketch stored in the file denotes by ?file-URL.")

(isa doSaveSketchAs SimpleActionPredicate)
(arity doSaveSketchAs 2)
(arg1Isa doSaveSketchAs SketchAgent-CA)
(arg2Isa doSaveSketchAs CharacterString)
(comment doSaveSketchAs "(doSaveSketchAs ?sketch-agent ?file-URL) saves the sketch associated with ?sketch-agent to the designated file.")

;;;define doCreateNewSketch primitive
(isa doCreateNewSketch SimpleActionPredicate)
(arity doCreateNewSketch 0)
(comment doCreateNewSketch "(doCreateNewSketch) Creates a new sketch and spawns the corresponding sketch agent.")

(isa doSetActiveSketch SimpleActionPredicate)
(arity doSetActiveSketch 1)
(arg1Isa doSetActiveSketch NuSketchSketch)
(comment doSetActiveSketch "(doSetActiveSketch ?sketch) ensures the specified sketch is the active sketch.")

;;;define doCloseSketch primitive
(isa doCloseSketch SimpleActionPredicate)
(arity doCloseSketch 1)
(arg1Isa doCloseSketch NuSketchSketch)
(comment doCloseSketch "(doCloseSketch ?sketch) closes the sketch ?sketch and its corresponding agent.")



